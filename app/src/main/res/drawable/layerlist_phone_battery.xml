<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/colorGreen"/> <!--进度条背景的颜色-->
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:id="@android:id/progress"><!--控制进度-->
        <clip>
            <shape>
                <solid android:color="@color/colorPrimary"/> <!--进度条进度的颜色-->
                <corners android:radius="10dp"/>
            </shape>
        </clip>
    </item>
</layer-list>