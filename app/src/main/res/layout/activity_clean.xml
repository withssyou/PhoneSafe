<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_clear_size_tv"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:text="00MB"
        android:textSize="30sp" />
    <ProgressBar
        android:id="@+id/activity_clear_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>
    <LinearLayout
        android:id="@+id/activity_clear_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_clear_size_tv"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/activity_clear_lv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/activity_clear_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清除选中文件"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/selector_softmanager_delete_btn"
            />
    </LinearLayout>
</RelativeLayout>