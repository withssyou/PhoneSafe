<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/demo_et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/demo_et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/demo_et1"
        />
    <Button
        android:id="@+id/demo_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"/>
    <Button
        android:id="@+id/demo_cb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="30dp"/>
    <TextView
        android:id="@+id/demo_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="20dp"
        android:text="XXX"/>

    <ProgressBar
        android:layout_marginTop="30dp"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/demo_et2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:id="@+id/progressBar" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/demo_tv"
        android:layout_marginBottom="58dp"
        android:id="@+id/progressBar2"
        android:layout_alignEnd="@+id/demo_cb"
        android:layout_alignStart="@+id/progressBar" />

    <ProgressBar
        android:id="@+id/aac"
        android:layout_margin="30dp"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:max="100"
        android:progress="50"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </ProgressBar>

</RelativeLayout>